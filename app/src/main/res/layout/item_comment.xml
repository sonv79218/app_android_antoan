<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#F0E6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header: avatar + name + rating + date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#EDE7F6"
                android:clipToOutline="true"
                android:padding="2dp"
                android:layout_marginRight="12dp"
                android:importantForAccessibility="yes" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCommentUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#2E1A32"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Nguyá»…n A" />


                <TextView
                    android:id="@+id/tvCommentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="#7A6A7A"
                    tools:text="12 Thg 3, 2025" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                tools:rating="4.5" />
            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="More actions"/>
        </LinearLayout>

        <!-- Ná»™i dung review -->
        <TextView
            android:id="@+id/tvCommentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="#333333"
            android:maxLines="6"
            android:ellipsize="end"
            tools:text="Ná»™i dung review máº«u: sÃ¡ch ráº¥t hay, cá»‘t truyá»‡n háº¥p dáº«n, nhÃ¢n váº­t cÃ³ chiá»u sÃ¢u..." />


        <!-- Actions: Helpful, Reply, More -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="start|center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHelpful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Há»¯u Ã­ch ðŸ’—"
                android:textAllCaps="false"
                android:textSize="13sp"
                app:iconGravity="textStart"
                android:backgroundTint="@android:color/holo_purple"
                app:strokeColor="#EFFFFF"
                app:strokeWidth="1dp"
                app:cornerRadius="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="â€¢ 12" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Tráº£ lá»i"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:backgroundTint="@android:color/holo_purple"
                app:cornerRadius="6dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>